@using Microsoft.AspNetCore.Components.Web;
@using WebApplication1.product;
@using WebApplication1.Services;
@inject ProductService ProductService;
@using WebApplication1.productAPI;
@using Microsoft.AspNetCore.Mvc.RazorPages;


@code {
	Myproducts? SelectedProduct;
	string? selectedProductId;

	void SelectProduct(string? productId)
	{
		selectedProductId = productId;
		SelectedProduct = ProductService.GetProducts().First(x => x.Productid == productId);
	}
	void SlideShow()
	{
		List<Myproducts> myproducts = ProductService.GetProducts().Where(x => x.Slider == true).ToList();

	}

}
