}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="~/css/reset.css">
	<link rel="stylesheet" href="~/css/Var.css">
	<link rel="stylesheet" href="~/font/font.css">
	<link rel="stylesheet" href="~/css/ProductsPageStyle.css">


	<title>@Model.Category</title>
</head>
<body>

	<div class="title">
		<div class="inner--title">
			<span class="category--name">@Model.Category</span>

		</div>
		<div class="num--product">
			<span>کالا</span>
			<span class="number">@Model.Products.Count</span>





		</div>
	</div>
	<hr>
	<div class="continer">
		<!-- product -->
		@foreach (var product in Model.Products)
		{
			<div class="item">
				<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="icon">
					<path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
				</svg>
				<a class="img" href=""><img src="@product.Main_Image" alt=""></a>
				@{
					if ((bool)@product.Available)
					{
						<span class="existence">موجود است</span>
					}
					else
					{
						<span class="existence">موجود نیست</span>
					}
				}

				<span class="dis">@product.ProductDescription</span>
				<span class="price">@product.ProductPrice تومن</span>

				<div onclick=@Model.sendLike(product) class="basket">
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="cart">
						<path stroke-linecap="round" stroke-linejoin="round" d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 00-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 00-16.536-1.84M7.5 14.25L5.106 5.272M6 20.25a.75.75 0 11-1.5 0 .75.75 0 011.5 0zm12.75 0a.75.75 0 11-1.5 0 .75.75 0 011.5 0z" />
					</svg>

					<span>افزودن به سبد خرید</span>
				</div>
			</div>
		}
		
	</div>
